REPORT  ZSTRINGSZ334.
TABLES zempsz334.


*1.FELADAT
DATA: A(2) TYPE C,
      B(2) TYPE C,
      C(10) TYPE C,
      USER(10) TYPE C,
      H TYPE I,
      FULLNAME(30) TYPE C,
      JRSN(2) TYPE C.

WRITE 'ALKALMAZOTT LISTA:'.
ULINE.

SELECT * FROM zempsz334.
  CONCATENATE zempsz334-sname zempsz334-Fname INTO FULLNAME SEPARATED BY ' '.
  
  H = STRLEN( ZEMPSZ334-FNAME ).
  H = H - 2.
  
  A = zempsz334-sname+0(2).
  B = zempsz334-Fname+H(2).
  
  C = zempsz334-EMPID.
  SHIFT C LEFT.
  SHIFT C LEFT DELETING LEADING '0'.
  
  CONCATENATE A B C INTO USER.
  
  IF zempsz334-BONUS < 5.
    CONCATENATE USER 'JN' INTO USER.
  ELSE.
    CONCATENATE USER 'SN' INTO USER.
  ENDIF.
  
  TRANSLATE USER USING 'N#'.
  
  write: / FULLNAME,'USER: ',USER.
ENDSELECT.



